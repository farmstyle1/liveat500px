        android:padding="16dp">
        <TextView
            android:text="Android Android Android Android Android Android Android Android Android Android Android Android Android Android Android Android Android Android"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#fff"/>
        <TextView
            android:text="Android Android Android Android Android Android Android Android Android Android Android Android Android Android Android Android Android Android"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_width="match_parent"
